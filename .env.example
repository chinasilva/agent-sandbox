# Agent Sandbox Environment Variables
# Copy this file to .env and fill in your values

# API Keys
# ==========
# OpenAI API Key (for LLM capabilities)
OPENAI_API_KEY=sk-your-openai-key

# Brave Search API Key (for web search)
# Get one at: https://brave.com/search/api/
BRAVE_API_KEY=your-brave-search-key

# GitHub Token (for GitHub operations)
# Create one at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp-your-github-token

# Server Configuration
# ====================
PORT=3000
NODE_ENV=development

# Redis Configuration
# ===================
# Docker automatically sets this
REDIS_URL=redis://localhost:6379

# Application Configuration
# ========================
# Max concurrent tasks (adjust based on server resources)
AGENT_MAX_CONCURRENT=2

# Task timeout in seconds
AGENT_TASK_TIMEOUT=300

# Enable/disable specific skills
SKILLS_WEB_SEARCH=true
SKILLS_CODE_GENERATOR=true
SKILLS_REPORT_GENERATOR=true
SKILLS_GITHUB_PUBLISHER=true
